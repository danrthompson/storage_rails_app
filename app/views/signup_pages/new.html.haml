  function sizeEntriesTheSame(divName){
    var maxHeight = 0;
    var entries = $("." + divName);
    entries.each(function(){
      var thisHeight = $(this).height();
      if (thisHeight > maxHeight){
        maxHeight = thisHeight;
      } 
    });
    entries.css("height", maxHeight);
    console.log("reset size");
  }

