  .blue-bar#signup-security
    %br/ 
    %h2.white Your Items Are Always Safe
    %br/ 

  %br/ 
  .container.row.pricing-wrapper.align-center
    %br/ 
    %br/ 
    .width-30.center-margin
      %img{:src => "https://s3.amazonaws.com/storage_rails_app_dev/images/shield_img.png", :alt => ""}/ 

