        .pricing-info
          .pricing-title.by-space
            %h3 5' x 10'
          .price
            %h3.dark-gray $75.00
            %p.price-subtext per month
          .price-description
            %p
              As much as you can fit in a
              %br/ 
              5' x 10' area.
      .col-md-4.pricing-block
        %i.pricing-icon.icon-10x10.by-space
        .pricing-info
          .pricing-title.by-space
            %h3 10' x 10'
          .price
            %h3.dark-gray $140.00
            %p.price-subtext per month
          .price-description
            %p
