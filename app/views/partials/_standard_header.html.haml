- if defined? homepage and homepage
  - quickbox_logo_link = 'javascript: void(0);'
- else
  - quickbox_logo_link = '/'

%nav.navbar.navbar-default.navbar-fixed-top
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{type: 'button', 'data-toggle' => 'collapse', 'data-target' => '#navbar-main'}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: quickbox_logo_link}
        %img{:src => "https://s3.amazonaws.com/storage_rails_app_dev/images/qb-logo.png", :alt => "Brand", style: 'height: 40px; width: 40px;'}/
        %span.logo-text.hide-on-small QuickBox
        %span.phone-number (720) 583-5826
    .collapse.navbar-collapse#navbar-main
      %ul.nav.navbar-nav
        %li= link_to 'Pricing', pricing_path
        %li= link_to 'How It Works', how_quickbox_works_path
        %li= link_to 'FAQ', faq_path
      %ul.nav.navbar-nav.navbar-right
        - if current_user
          %li= link_to 'Dashboard', storage_items_path
          %li= link_to 'Account', edit_user_path(current_user)
          %li= link_to 'Logout', destroy_user_session_path
        - else
          %li= link_to 'Login', new_user_session_path
          %li= link_to 'Signup', new_signup_pages_path
