.boxed-grey.col-md-12
  / %form#contact-form
  .row
    .col-md-6.align-left
      = f.label :posted_delivery_date, "Delivery Date"
      = f.text_field :posted_delivery_date,  autofocus: true, placeholder:"Does tomorrow work for you?", class:"form-control", id:"#{id}"
    .col-md-6.align-left
      %label{:for => "date-picker"} Time Of Day
      = f.select  :posted_delivery_time, options_for_select([["1:00", "13"], ["2:00", "14"]]),{}, {class:"form-control selectpicker", id:"#{select_id}"}
      %br/ 

      / <input type="text" class="form-control" name="date-picker" id="datepicker" placeholder="Does tomorrow work for you?">

:javascript
  var picker = new Pikaday({ field: document.getElementById('datepicker') });
  var picker2 = new Pikaday({ field: document.getElementById('datepicker2')});