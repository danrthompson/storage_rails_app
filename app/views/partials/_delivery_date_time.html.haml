= javascript_include_tag "bootstrap-datepicker-parent"

.boxed-grey.col-md-12
  .row#validator-id
    .col-md-6.align-left
      %label{:for => "posted_delivery_date"}
        Date
      #datepicker.input-append.date
        = f.text_field :proposed_date, class:"span2 form-control", id: "datepicker-value", placeholder: 'Which day is best?', value: (f.object.proposed_date.strftime('%m/%d/%Y') unless f.object.proposed_date.blank?)
        %span.add-on
          %i.icon-calendar


    .col-md-6.align-left
      %label{:for => "date-picker"} Time Of Day (let us know what times work for you)
      = f.text_area  :proposed_times
      %br/
      %br/




:javascript
  $(document).ready(function(){
    var start = new Date();
    start.setDate(start.getDate()+1);
    var end = new Date();
    end.setDate(start.getDate()+150);

    $('#datepicker-value').datepicker({
        autoclose: true,
        todayHighlight: true
    });
    $('#datepicker-value').datepicker('setStartDate', start);
    $('#datepicker-value').datepicker('setEndDate', end);
  });
