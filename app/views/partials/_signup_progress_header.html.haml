#top-header
  - if include_header
    .container.full-width.blue-bg.no-padding.white.align-center
      %br/
      %h1#lets-doit= header
  #signup-progress.row.align-center
    .col-md-8.col-md-offset-2.col-sm-10.col-sm-offset-1
      %ul.no-list
        %li{id: 'step-1', class: "#{step_1_classes}"}
          %h4
            %span{data: {'icon' => "D"}, class: "green#{step_1_span_class}"}
            1.
            %br.show-on-small
            Estimate Price
        %li{id: 'step-2', class: "#{step_2_classes}"}
          %h4
            %span{data: {'icon' => "D"}, class: "green#{step_2_span_class}"}
            2.
            %br.show-on-small
            Create Login
        %li{id: 'step-3', class: "#{step_3_classes}"}
          %h4
            %span{data: {'icon' => "D"}, class: "green#{step_3_span_class}"}
            3.
            %br.show-on-small
            Book Pickup
