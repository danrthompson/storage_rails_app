

.col-md-4
  %p
    %span
      ID:
      = request.id
    %br/ 
    %span
      Name:
      %span.blue 
        = request.user.first_name
        = request.user.last_name
    %br/ 
    %br/ 
    %span Phone:
    = request.user.phone_number
    %br/ 
    / %span Delivery Time:
    / %br/ 
    / = request.delivery_time.strftime("%B %d at %l:%M %p")
    / %br/      
    %span Email:
    %a{:href => ""}
      = request.user.email
    %br/ 
.col-md-4      
  %p 
    %span Delivery Time:
    %br/ 
    = request.delivery_time.strftime("%B %d at %l:%M %p")
    %br/    
    %span Address:
    %br/ 
    = request.user.address_line_1
    = request.user.address_line_2
    %br/ 
    #{request.user.city}, #{request.user.state}, #{request.user.zip}
    %br/ 
    %div 
      Notes:
      %p.hide-unused= request.user.special_instructions
    / %span Phone:
    / = request.user.phone_number
    / %br/ 

:javascript
    hideParentWhenNotUsed("hide-unused");

