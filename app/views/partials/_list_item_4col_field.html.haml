.col-md-3.col-sm-3.col-xs-12.inventory-entries.four-by-entry
  %br/ 
  %img{:alt => "https://s3.amazonaws.com/harnessthecrowd/quickbox/box-default.jpg", :src => "#{imgURL}"}/
  %h4.align-center.pb-10= title
  %p.align-center= price
  %p.align-center.subtitle.no-padding= description
  = form.text_field field_val,  autofocus: true, placeholder:"#{price}", class:"form-control quantity-field", id:"txt-#{id}"
  %button.btn.btn-primary.rounded.full-width.btn-inc{:type => "button", id:"#{id}"} +
  %p.no-opacity.onepxhigh  spacer
