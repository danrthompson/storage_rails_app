/ Modal
#signup_modal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "signup_modalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
          %span.sr-only Close
        %h4#signup_modalLabel.modal-title Signup For QuickBox!
      .modal-body
        %br/ 
        = form_for(@pickup_request, url: fast_signup_path) do |f| 
          / %p.dark-gray
          /   Clear Some Space
          / .double-line
          .row
            %p.dark-gray.heavy-font.full-opacity.no-margin
              Schedule a Pickup to Get Started!
              %br/ 
              %p.no-opacity spacers
          .row#validator-id.no-margin
            .col-md-4.align-left   
              %b 
              #datepicker.input-append.date
                =f.text_field :posted_delivery_date, class:"span2 form-control", id: "test-value", placeholder: 'Choose a day'
                %span.add-on
                  %i.icon-calendar
             
            .col-md-4.align-left
              = f.select  :posted_delivery_time, options_for_select([["Choose a time"]]),{}, {class:"form-control selectpicker", id:"test_id"}

            .col-md-4.align-left
              .continue-button
                %button.btn.btn-primary.blue-bg.blue-bg-hover.white{type: :submit} Schedule Pickup

          :javascript
            $(document).ready(function(){
              var start = new Date();
              var end = new Date();
              end.setDate(start.getDate()+30);

              $('#test-value').datepicker({
                  daysOfWeekDisabled: "0",
                  autoclose: true,
                  todayHighlight: true
              });
              $('#test-value').datepicker('setStartDate', start);
              $('#test-value').datepicker('setEndDate', end);


              $('#test-value').on('changeDate', function(){
                var available_delivery_times = #{Request.available_delivery_times.to_json};
                var dropdownID = "#" + "test_id";
                updateDropdownDates('#test-value', dropdownID, available_delivery_times);
              });
            });


            



