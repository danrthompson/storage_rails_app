
= render :partial => 'partials/sign_in_header'
 
/ %p= link_to 'Login', new_user_session_path
#homepage
  %section#intro.intro
    .slogan
      %h1 We're Reinventing Storage
      %iframe#signup-video{:allowfullscreen => "", :frameborder => "0", :mozallowfullscreen => "", :src => "//player.vimeo.com/video/109205395", :webkitallowfullscreen => ""}
      %br/ 
      %br/ 
      .row#signup-action
        .col-md-8.col-md-offset-2.col-sm-8.col-sm-offset-2.col-xs-10.col-xs-offset-1.align-center#homepage-datetime
          = form_for(@pickup_request, url: fast_signup_path) do |f| 
            = render partial: "partials/slender_datetime", locals: {f:f, id:"pickup_datepicker", select_id:"delivery_time"}
      .row
        .col-md-6.col-md-offset-3.align-center
          %p.heavy-font
            To get a price estimate for your items click
            %span.white.pointer.heavy-font{"data-target" => "#quote_gen_popup", "data-toggle" => "modal"}
              here.
         
            
    
    .row.home-screen-links#scroll-to-about
      %a.white{}
        .boxed-gray.continue-button
          %button.btn.btn-primary.white-bg Click To Learn More

  %br/
  %br/
  %br/  
  / Section: services
  %section#what-we-do.home-section.text-center
    .container
      .row
        .col-md-10.col-md-offset-1
          .section-heading
            %h2 We Make Storage Easy
          %br/
          %br/
          .row
            .col-sm-4.col-md-4.no-pointer
              .service-box
                .service-icon
                  =image_tag "offer-1.png", :class => "offer-img"
                .service-desc
                  %h5
                    Save Money
                    
                  %p Save money by only paying for the space you use. Our fees are calculated by the item - so there's no need to pay for half-full storage containers.
            .col-sm-4.col-md-4
              .service-box
                .service-icon
                  =image_tag "offer-2.png", :class => "offer-img"
                .service-desc
                  %h5
                    Save Time
                    
                  %p We pick up your items for free, then deliver any or all of them any time to your door on demand! Easy as that!
            .col-sm-4.col-md-4
              .service-box
                .service-icon
                  =image_tag "offer-3.png", :class => "offer-img"
                .service-desc
                  %h5
                    Relax
                  %p Use our online interface to request a pickup, have your items delivered, or just keep track of what you have in storage. Simple!
                  %br/
          .row.homepage-started-row
            .col-md-10.col-md-offset-1.center-align
              / %h3
              /   \... and one more thing: we provide packing boxes
              /   %b.blue for free!
      / End Row
   
  / /Section: services
  .single-line.no-margin
  .row.homepage-started-row.bg-gray
    .col-md-6.col-md-offset-2.col-sm-8
      %h3.dark-gray
        Make Your Life A Little Easier
    .col-md-2.col-sm-3
      .boxed-gray.continue-button.pull-left
        %a.white{"data-target" => "#signup_modal", "data-toggle" => "modal"} 
          %button.btn.btn-primary.blue-bg.yellow-hover Reserve Pickup


  .single-line.no-padding
  / Section: works
  %section#save-much.home-section.text-center
    .heading-works.marginbot-50
      .container
        .row
          .col-lg-10.col-lg-offset-1
            %img.full-width{:alt => "", :src => "https://s3.amazonaws.com/storage_rails_app_dev/images/primary-graphic.png"}/

  / Section: works
  %section#works.home-section.text-center
    .heading-works.marginbot-50
      .container
        .row
          .col-lg-10.col-lg-offset-1.col-md-10.co-md-offset-1
            .section-heading
              %h2.white How It Works
            %br/
            %img.full-width{:alt => "", :src => "https://s3.amazonaws.com/storage_rails_app_dev/images/how-it-works-2.png"}/
            %br/ 
            %br/ 
            = link_to "Still curious about how it works? Click here.", faq_path, class: "pull-right", target: "_blank" 

  / Section: contact
  %section#store-what.home-section.text-center
    .container
      .row
        .col-md-10.col-md-offset-1
          .section-heading
            %br/
            %h2 Any Item, Any Size
            %p.dark-gray 
              What do we store? Anything! Our sizing is broken into four main categories, which cover about everything: boxes, bikes, couches, furniture and more. For sizing details
              %a{:href => ""} click here.

            %br/
          
          .row.inventory
            / TOP ROW
            = render partial: "partials/list_item_4col", locals: {imgURL:"https://s3.amazonaws.com/storage_rails_app_dev/images/cardboard2.png", title:"Small Items", description:"$5.00/month"}
            = render partial: "partials/list_item_4col", locals: {imgURL:"https://s3.amazonaws.com/storage_rails_app_dev/images/bike.png", title:"Medium Items", description:"$12.00/m"}
            = render partial: "partials/list_item_4col", locals: {imgURL:"https://s3.amazonaws.com/storage_rails_app_dev/images/couch.png", title:"Large Items", description:"$25.00/m"}
            = render partial: "partials/list_item_4col", locals: {imgURL:"https://s3.amazonaws.com/storage_rails_app_dev/images/table.png", title:"XL Items", description:"$40.00/month"}
           
            
  .row
    .col-md-12
      .single-line
      .row.homepage-started-row
        .col-md-12
          %h3.dark-gray
            Any Item, Free Pickup,
            %b.blue Storage That Fits
        .col-md-4.col-md-offset-4.col-sm-4.col-sm-offset-4
          .boxed-gray.continue-button.pull-left
            %a.white{"data-target" => "#signup_modal", "data-toggle" => "modal"}
              %button.btn.btn-primary.blue-bg.yellow-hover Reserve Pickup

  .container
    .row
      .col-md-10.col-md-offset-1
        = render partial: "partials/signup_modal"
  = render partial: "partials/feedback_tab"
  = render :partial => 'partials/footer'
  = render partial: "partials/quote_gen_modal"
= javascript_include_tag "item_selector"

:javascript
  $(".scroll-to-vid").click(function(){
    $('html, body').animate({scrollTop: $("#signup-action").offset().top - ($(window).height()-50)/2}, 1000);
  });

  $("#scroll-to-about").click(function(){
    $('html, body').animate({scrollTop: $("#what-we-do").offset().top - 100}, 600);
  });

  $("#what-we-do-link").click(function(){
    $('html, body').animate({scrollTop: $("#what-we-do").offset().top - 100}, 800);
  });

  $("#save-much-link").click(function(){
    $('html, body').animate({scrollTop: $("#save-much").offset().top - 100}, 800);
  });

  $("#works-link").click(function(){
    $('html, body').animate({scrollTop: $("#works").offset().top - 100}, 1000);
  });



