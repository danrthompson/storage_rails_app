
= render partial: "partials/header"
/ SECONDARY HEADER BAR
.container.full-width.blue-bg.no-padding.white.dashboard-header
  .row
    .col-md-6.align-center
      %h1 HERE ARE YOUR THINGS
    .col-md-1.col-md-offset-2.col-sm-4.col-xs-4.align-center
      %a{:href => "user-pickup.html"}
      .service-box
        .service-icon
          %i.fa.fa-clock-o.fa-3x
        .service-desc
          %h6
            Large Item
            = succeed "Pickup" do
              %br/
    .col-md-1.col-sm-4.col-xs-4.align-center
      %a{:href => "user-newbox.html"}
      .service-box
        .service-icon
          %i.fa.fa-dropbox
        .service-desc
          %h6
            Order
            = succeed "Boxes" do
              %br/
    .col-md-1.col-sm-4.col-xs-4.align-center
      %a{:href => "extra-faq.html"}
      .service-box
        .service-icon
          %i.fa.fa-question-circle.fa-3x
        .service-desc
          %h6
            Have a
            %br>/
            Question?
/ END SECONDARY HEADER
%br/
%br/
%br/
.container.inventory
  .row
    .col-md-10.col-md-offset-1
      .row
        .col-md-8
          %form#pickup-form{:action => ""}
            / Boxes At Home
            .row
              %h2
                %span.items-count> 3
                Items Awaiting Pickup
                %a.pull-right{:href => "user-newbox.html"} Order Additional Boxes
              .double-line
              .col-md-6.col-sm-6.col-xs-6.inventory-entries.pickup-entry
                .inner
                  .avatar
                    %img.img-responsive{:alt => "", :src => "img/team/7.PNG"}/
                  %h4 Standard Box
                  %p.subtitle.box-subtitle.col-md-12.col-sm-12.col-xs-12 $6.25/month, 22" x 18" x 12"
                  %input.hidden{:name => "vehicle", :type => "checkbox", :value => "\#{{bike}}"}/
              .col-md-6.col-sm-6.col-xs-6.inventory-entries.pickup-entry
                .inner
                  .avatar
                    %img.img-responsive{:alt => "", :src => "img/team/7.PNG"}/
                  %h4 Standard Box
                  %p.subtitle.box-subtitle.col-md-12.col-sm-12.col-xs-12 $6.25/month, 22" x 18" x 12"
                  %input.hidden{:name => "vehicle", :type => "checkbox", :value => "\#{{bike}}"}/
            / end row
          %br/
          %br/
          / Existing Inventory Row
          %form#delivery-form{:action => ""}
            .row
              %h2
                %span.items-count> 10
                Items In Storage
              .double-line
              .col-md-6.col-sm-6.col-xs-6.inventory-entries.delivery-entry
                .inner
                  .avatar
                    %img.img-responsive{:alt => "", :src => "img/team/1.jpg"}/
                  %h4 Standard Box
                  %p.subtitle.box-subtitle.col-md-12.col-sm-12.col-xs-12 $6.25/month, 22" x 18" x 12"
              .col-md-6.col-sm-6.col-xs-6.inventory-entries.delivery-entry
                .inner
                  .avatar
                    %img.img-responsive{:alt => "", :src => "img/team/1.jpg"}/
                  %h4 Standard Box
                  %p.subtitle.box-subtitle.col-md-12.col-sm-12.col-xs-12 $6.25/month, 22" x 18" x 12"
              .col-md-12.col-sm-12.col-xs-12.align-left
                %br/
                %a{:href => "user-newbox.html"} Want More Boxes? Schedule a dropoff.
            / end row
        .col-md-4.inventory-sidebar
          .row.sidebar-txtentry.light-blue-bg
            .inner
              %h5 Notifications
              .single-line
              %ul
                %li
                  %span.order-item You have an pickup schedules for Thursday, September 15
                %li
                  %span.order-item You currently have 3 boxes at home, waiting to be picked up.
              /
                <ul class="li"><span class="order-item">Standard Box</span><span class="order-quantity">4</span></ul>
                <ul class="li"><span class="order-item">Wardrobe Box</span><span class="order-quantity">2</span></ul>
          %br/
          .row.sidebar-txtentry.bg-gray
            .inner
              %h5 Inventory
              .single-line
              %ul.no-list
                %li
                  %span.order-item Standard Boxes
                  %span.pull-right 4
                %li
                  %span.order-item Wardrobe Boxes
                  %span.pull-right 1
                %li
                  %span.order-item Couches
                  %span.pull-right 1
              /
                <ul class="li"><span class="order-item">Standard Box</span><span class="order-quantity">4</span></ul>
                <ul class="li"><span class="order-item">Wardrobe Box</span><span class="order-quantity">2</span></ul>
          .row
            .boxed-gray.continue-button
              %a{:href => "user-pickup.html"}
                %button#pickup-button.btn.btn-primary.gray-bg{:disabled => "", :type => "button"} Request Pickup
              %a{:href => "user-delivery.html"}
                %button#delivery-button.btn.btn-primary.blue-bg.blue-bg-hover{:disabled => "", :type => "button"} Request Delivery
      / end row
  / end row
%br/
%br/
%br/
