- content_for :title do
  = "Create Account |"


= render :partial => 'partials/sign_in_header'



/ Section: ITEM SELECTION
%section#about.home-section.text-center
  .heading-about.marginbot-30
    .container
      .row
        .col-lg-8.col-lg-offset-2
          .section-heading
            %h2 Create An Account
  / BODY CONTENT: SELECT ITEMS
  .container
    .row
      .col-lg-6.col-md-offset-3
        .boxed-grey
          .row
            = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
              = devise_error_messages!          
              .col-md-8.col-md-offset-2
                / %h2 Sign in
                %br/
                %br/ 
                %div.form-group.address-form
                  / = f.label :email
                  / %br/
                  = f.email_field :email, autofocus: true, placeholder:"Email", class:"form-control"
                  = f.password_field :password, autocomplete: "off", placeholder:"Password", class:"form-control"
                  = f.password_field :password_confirmation, autocomplete: "off", placeholder:"Password Confirmation", class:"form-control"

                - if devise_mapping.rememberable?
                  #remember-checkbox.col-md-6
                    = f.check_box :remember_me, class: "pull-left"
                    %p.pull-left Remember Me
              .col-md-8.col-md-offset-2.bottom-buttons
                %div= f.submit "Create Account",:class => "btn btn-skin pull-right"                  
                %a{href: "/"}
                  %h1.btn.btn-default.pull-left Back    
          %br/
          %br/
        = link_to "Already have an account? Login", new_user_session_path, class:"black-hover, pull-right"  


= render :partial => 'partials/footer'

/ = render "devise/shared/links"