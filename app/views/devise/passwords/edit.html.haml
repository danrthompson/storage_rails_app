- content_for :title do
  = "Change Password |"
= render partial: 'partials/standard_header'


/ Section: ITEM SELECTION
%section#about.home-section.text-center
  .heading-about.marginbot-30
    .container
      .row
        .col-lg-8.col-lg-offset-2
          .section-heading
            %h2.no-margin Change your password

          %p (choose a new password for your account)
        .col-md-6.col-md-offset-3
          %br/ 
          %p.hideme
            = devise_error_messages!

  / BODY CONTENT: SELECT ITEMS
  .container
    .row
      .col-lg-6.col-md-offset-3
        .boxed-grey

          .row
            .col-md-10.col-md-offset-1
              = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
                %p 
                  = f.hidden_field :reset_password_token
                %div
                  = f.label :password, "New password"
                  %br/
                  = f.password_field :password, autofocus: true, autocomplete: "off", class:"form-control"
                %div
                  %br/ 
                  = f.label :password_confirmation, "Confirm new password"
                  %br/
                  = f.password_field :password_confirmation, autocomplete: "off", class:"form-control"

                %div.align-center
                  %br/ 
                  = f.submit "Change my password", class: "btn btn-skin pull-right"      
              / = render "devise/shared/links"


