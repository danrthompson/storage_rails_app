      = link_to "Contact", contact_path, class:"black-hover", target:"_blank"
  .nav-links-wrapper.col-md-2.col-sm-2.left-border.col-xs-1
    .nav-links
      = link_to "FAQ", contact_path, class:"black-hover", target:"_blank"
